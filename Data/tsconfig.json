{
  "compilerOptions": {
    "jsx": "react",
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@framework/*": ["../Framework/src/*"]
    }
  },
  "include": [
    "src/**/*.scss",
    "src/**/*.ts",
    "src/**/*.tsx",
    "../Core/*.ts",
    "typings/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
